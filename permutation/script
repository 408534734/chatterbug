#!/bin/bash

#runjob -p 2 -n 512  --block $COBALT_PARTNAME --envs BG_SHAREDMEMSIZE=32MB BGQ_COUNTER_FILE=$mapping.cnt --mapping $mapping --envs PAMI_ROUTING=[2048][,[4][,[0:4][,[2][,2]]]] : ./proofdef 1048576 0 1 -1 -1
size=1
procs=$1
for i in {1..20}
do
runjob -p 16 -n $procs --block $COBALT_PARTNAME --envs BG_SHAREDMEMSIZE=32MB : ./permutation $size >${procs}_def_$size
runjob -p 16 -n $procs --block $COBALT_PARTNAME --envs BG_SHAREDMEMSIZE=32MB PAMI_ROUTING=[2048][,[4][,[0:4][,[4][,4]]]] : ./permutation $size >${procs}_det_$size
runjob -p 16 -n $procs --block $COBALT_PARTNAME --envs BG_SHAREDMEMSIZE=32MB PAMI_ROUTING=[2048][,[4][,[0:4][,[0][,0]]]] : ./permutation $size >${procs}_long_$size
runjob -p 16 -n $procs --block $COBALT_PARTNAME --envs BG_SHAREDMEMSIZE=32MB PAMI_ROUTING=[2048][,[4][,[0:4][,[1][,1]]]] : ./permutation $size >${procs}_dyn_$size
let "size = 2 * $size"
done
